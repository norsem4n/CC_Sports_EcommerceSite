@model CC_Sports.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete your account, @Context.User.Identity.Name?</h3>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}
@if (!Context.User.Identity.IsAuthenticated)
{
    <h1>Must login to access Account Information. Please login here: <a asp-controller="Users" asp-action="Login">Login</a></h1>
}

else
{
    <div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserLogin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserLogin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserPassword)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserPassword)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StreetAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StreetAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Zip)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Zip)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UserId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Restrict" asp-action="AccountInformation">Back to Account Information</a>
        </form>
    </div>
}
